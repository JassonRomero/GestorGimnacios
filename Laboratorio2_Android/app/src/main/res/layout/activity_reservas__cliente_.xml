<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reservas_Cliente_Activity">

    <DatePicker
        android:id="@+id/dp_fechaInicio_recerva2"
        android:layout_width="288dp"
        android:layout_height="101dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        app:layout_constraintEnd_toEndOf="@+id/dp_fechaInicio_recerva"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/dp_fechaInicio_recerva"
        app:layout_constraintTop_toBottomOf="@+id/textView27" />

    <DatePicker
        android:id="@+id/dp_fechaInicio_recerva"
        android:layout_width="288dp"
        android:layout_height="101dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView26" />

    <TextView
        android:id="@+id/tv_nombreCentroAdmi6"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="182dp"
        android:layout_height="75dp"
        android:layout_marginTop="44dp"
        android:text="Reservas"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/background_dark"
        android:textSize="50sp"
        app:fontFamily="@font/arizonia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Fecha inicio:"
        app:layout_constraintEnd_toEndOf="@+id/tv_nombreCentroAdmi6"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/tv_nombreCentroAdmi6"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombreCentroAdmi6" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Fecha fin:"
        app:layout_constraintEnd_toEndOf="@+id/dp_fechaInicio_recerva"
        app:layout_constraintStart_toStartOf="@+id/dp_fechaInicio_recerva"
        app:layout_constraintTop_toBottomOf="@+id/dp_fechaInicio_recerva" />

    <Button
        android:id="@+id/btn_reservas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="Seleccionar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dp_fechaInicio_recerva2"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>