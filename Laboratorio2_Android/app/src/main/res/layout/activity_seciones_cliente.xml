<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecionesClienteActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sesionesCliente_list_recycler"
        android:layout_width="312dp"
        android:layout_height="336dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datePicker1"
        app:layout_constraintVertical_bias="0.071" />

    <ImageView
        android:id="@+id/ic_playSecionesCliente"
        android:layout_width="87dp"
        android:layout_height="72dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/dp_cliente_sesiones"
        app:layout_constraintTop_toTopOf="@+id/dp_cliente_sesiones"
        app:srcCompat="@mipmap/ic_play" />

    <DatePicker
        android:id="@+id/dp_cliente_sesiones"
        android:layout_width="253dp"
        android:layout_height="139dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombreCentroAdmi5" />

    <TextView
        android:id="@+id/tv_nombreCentroAdmi5"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="314dp"
        android:layout_height="73dp"
        android:layout_marginTop="44dp"
        android:text="Agentar sesion"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/background_dark"
        android:textSize="50sp"
        app:fontFamily="@font/arizonia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>